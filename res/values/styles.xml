<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NomeOnibusApparence">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tamanho_letra_do_ponto</item>
    </style>
    
    <style name="DistanciaOnibusApparence" parent="NomeOnibusApparence">
        <item name="android:textSize">@dimen/tamanho_letra_da_distancia</item>
    </style>
    
	<style name="RateMeDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowTitleStyle">@style/RateMeDialogTitle</item>
	</style>
	<style name="RateMeDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:maxLines">1</item>
		<item name="android:height">5dp</item>        
	</style>
	<style name="RateMeDialogWindowTitle">
		<item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
	</style>
	
	<style name="Action_Bottom_Menu">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="Expandable_Onibus">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/texto_onibus_expandable_list</item>
    </style>
	
</resources>
